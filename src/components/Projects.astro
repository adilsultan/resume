---
const projects = [
  {
    title: 'Georgefi.trade',
    role: 'Founder & Lead Engineer',
    period: 'May 2025 — Present',
    description: 'An AI-driven SaaS platform providing real-time market sentiment and technical analysis for active traders, powered by Claude API, Node.js, and TypeScript.',
    highlights: [
      'Architected an AI-driven SaaS platform using Claude API, Node.js, and TypeScript for real-time market sentiment and technical analysis.',
      'Developed a swing-trading bot integrating GEX (Options Flow), Bollinger Bands, and liquidity shift indicators.',
      'Built automated pipelines to ingest and process market data, providing institutional money-flow dashboards for active traders.',
    ],
    tech: ['Claude API', 'Node.js', 'TypeScript', 'GEX', 'Algorithmic Trading'],
    link: '',
    github: '',
  },
  {
    title: 'AgentWatch',
    role: 'Founder & Lead Engineer',
    period: 'August 2025 — Present',
    description: 'A monitoring system designed to track real-time agentic workflows and autonomous AI behaviors, with centralized diagnostics and performance metrics.',
    highlights: [
      'Designed a monitoring system in Python and TypeScript to track real-time agentic workflows and autonomous AI behaviors.',
      'Integrated multi-source data feeds to provide a health-check dashboard for AI execution, focusing on performance metrics and agent health.',
    ],
    tech: ['Python', 'TypeScript', 'AI Observability', 'Real-Time Monitoring'],
    link: '',
    github: '',
  },
];
---

<section id="projects" class="py-20">
  <div class="mx-auto max-w-content px-6">
    <div class="animate-fade-in">
      <h2 class="text-sm font-medium text-accent uppercase tracking-wide mb-2">Ventures</h2>
      <h3 class="text-2xl sm:text-3xl font-bold text-dark-50 mb-10">Independent ventures & architecture projects</h3>

      <div class="space-y-8">
        {
          projects.map((project) => (
            <div class="group p-5 rounded-xl border border-dark-600 bg-dark-800/50 hover:border-dark-400 transition-all duration-300">
              <div class="flex items-start justify-between gap-4 mb-1">
                <h4 class="text-lg font-semibold text-dark-50 group-hover:text-accent transition-colors duration-200">
                  {project.title}
                </h4>
                <div class="flex items-center gap-3 flex-shrink-0">
                  {project.github && (
                    <a
                      href={project.github}
                      class="text-dark-200 hover:text-accent transition-colors"
                      aria-label={`GitHub repository for ${project.title}`}
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                      </svg>
                    </a>
                  )}
                  {project.link && (
                    <a
                      href={project.link}
                      class="text-dark-200 hover:text-accent transition-colors"
                      aria-label={`Live demo for ${project.title}`}
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                      </svg>
                    </a>
                  )}
                </div>
              </div>
              <div class="flex flex-wrap items-center gap-x-3 gap-y-1 mb-2">
                <span class="text-accent text-sm font-medium">{project.role}</span>
                <span class="text-dark-200 text-sm">{project.period}</span>
              </div>
              <p class="text-dark-100 text-sm leading-relaxed mb-3">{project.description}</p>
              <ul class="mb-4 space-y-1.5">
                {project.highlights.map((item) => (
                  <li class="flex items-start gap-2 text-dark-100 text-sm">
                    <span class="text-accent mt-1.5 flex-shrink-0">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" />
                      </svg>
                    </span>
                    {item}
                  </li>
                ))}
              </ul>
              <div class="flex flex-wrap gap-2">
                {project.tech.map((t) => (
                  <span class="text-xs px-2 py-1 rounded-md bg-dark-700 text-accent-hover border border-dark-500">
                    {t}
                  </span>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
