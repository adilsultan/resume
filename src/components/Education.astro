---
const education = [
  {
    degree: 'B.A. Applied Linguistics and Computer Science',
    institution: 'University of California, Los Angeles (UCLA)',
    period: 'Graduated Sept 2017',
    description: '',
  },
];
---

<section id="education" class="py-20">
  <div class="mx-auto max-w-content px-6">
    <div class="animate-fade-in">
      <h2 class="text-sm font-medium text-accent uppercase tracking-wide mb-2">Education</h2>
      <h3 class="text-2xl sm:text-3xl font-bold text-dark-50 mb-10">Academic background</h3>

      <div class="space-y-8">
        {
          education.map((edu) => (
            <div class="p-5 rounded-xl border border-dark-600 bg-dark-800/50 hover:border-dark-400 transition-colors duration-300">
              <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-1 mb-2">
                <div>
                  <h4 class="text-lg font-semibold text-dark-50">{edu.degree}</h4>
                  <p class="text-accent font-medium">{edu.institution}</p>
                </div>
                <span class="text-dark-200 text-sm whitespace-nowrap">{edu.period}</span>
              </div>
              {edu.description && (
                <p class="text-dark-100 text-sm leading-relaxed">{edu.description}</p>
              )}
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
